{
  "name": "e-commerce",
  "version": "0.0.0",
  "scripts": {
    "prepare": "husky",
    "commit": "git-cz",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "e2e": "firebase emulators:exec \"ng e2e\"",
    "e2e:ui": "firebase emulators:exec \"ng e2e --ui\"",
    "lint": "ng lint",
    "format": "prettier --write \"{src,e2e}/**/*.+(ts|js|json|html|scss)\"",
    "format:check": "prettier --check \"{src,e2e}/**/*.+(ts|js|json|html|scss)\"",
    "test:ci": "ng test --no-watch --browsers ChromeHeadless",
    "e2e:ci": "ng e2e --configuration production"
  },
  "private": true,
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,scss,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      },
      {
        "files": "index.html",
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "@angular/cdk": "20.2.14",
    "@angular/common": "20.3.0",
    "@angular/compiler": "20.3.0",
    "@angular/core": "20.3.0",
    "@angular/fire": "20.0.1",
    "@angular/forms": "20.3.0",
    "@angular/material": "20.2.14",
    "@angular/platform-browser": "20.3.0",
    "@angular/router": "20.3.0",
    "@tailwindcss/postcss": "4.1.17",
    "postcss": "8.5.6",
    "rxjs": "7.8.0",
    "tailwindcss": "4.1.17",
    "tslib": "2.3.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.3.0",
    "@angular/build": "20.3.0",
    "@angular/cli": "20.3.0",
    "@angular/compiler-cli": "20.3.0",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.35.0",
    "@playwright/test": "1.57.0",
    "@types/jasmine": "5.1.0",
    "angular-eslint": "20.3.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-prettier": "5.5.4",
    "firebase-admin": "13.6.0",
    "firebase-tools": "15.1.0",
    "git-cz": "4.9.0",
    "husky": "9.1.7",
    "jasmine-core": "5.9.0",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.0",
    "karma-firefox-launcher": "2.1.3",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "karma-mocha-reporter": "2.2.5",
    "lint-staged": "16.2.7",
    "playwright-ng-schematics": "2.1.0",
    "prettier": "3.6.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0"
  }
}
